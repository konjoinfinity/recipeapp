<p class="card">
  {{> 'recipe'}}
</p>

{{#if comments.length}}
  {{#each comments}}
    <div class="card">
      <div class="card-content">
        <span class="card-title">
          {{ content }}
        </span>
      </div>
      <div class="card-action">
        <a href="/user/{{ author.id }}" class="">{{ author.email }}</a>
        <span class="recipe__date">{{ createdAt }}</span>
        <span class="recipe_comments">{{ comments.length }} Comments</span>
      </div>
    </div>
  {{/each}}
{{/if}}

<div class="card">
  <div class="card-content">
    <h4 class="card-title">Add a comment:</h6>
    <form method="POST" action="/recipe/{{id}}?_method=PUT" class="row">
      <p class="input-field inline col s10">
        <label for="content"></label>
        <input type="text" name="content" id="">
      </p>
      <p class="input-field inline col s2">
        <input class="btn blue darken-1" type="submit" value="Submit">
      </p>
    </form>
  </div>
</div>
